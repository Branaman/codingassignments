<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>A Web Page</title>
  </head>
  <body>
    <h1>The Dojo Message Board</h1>
    <form class="" action="/messages" method="post">
      Name:<input type="text" name="name" value="" required>
      Message:<input type="text" name="message" value="" required>
      <input type="submit" value="Post Message">
    </form>
    <%for (var i = 0; i < messages.length; i++) {%>
      <div class="">
        <h2>Name: <%=messages[i].name%></h2>
        <p>Message: <%=messages[i].message%></p>
        <h3>Comments:</h3>
        <%for (var j=0; j < messages[i].comments.length; j++){%>
          <h5><%=messages[i].comments[j].name%> : <span><%=messages[i].comments[j].comment%></span></h5>
        <%}%>
        <form class="" action="/messages/<%=messages[i].id%>" method="post">
          Name: <input type="text" name="name" value="">
          Comment: <input type="text" name="comment" value="">
          <input type="submit" name="" value="Post Comment">
        </form>
      </div>
    <%}%>
  </body>
</html>
